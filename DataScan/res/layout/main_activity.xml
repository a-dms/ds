<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textViewWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="114dp"
        android:text="@string/welcome"
        android:textSize="@dimen/WelcomeFontSize" />
    
    <TextView
        android:id="@+id/textViewLoading"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_below="@id/textViewWelcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="114dp"
        android:text="@string/loading" />

    <Button
        android:id="@+id/buttonChooseTemplate"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/button_height"
        android:layout_alignLeft="@+id/textViewWelcome"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textViewWelcome"
        android:layout_marginBottom="117dp"
        android:background="@drawable/login_button"
        android:onClick="clickChooseTemplate"
        android:text="@string/choose_template"
        android:textColor="@color/white"
        android:textSize="@dimen/list_item_content_text" />

</RelativeLayout>