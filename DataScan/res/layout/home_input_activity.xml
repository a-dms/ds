<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.caas.datascan.HomeInputActivity" >

    <TextView
        android:id="@+id/txtTemplateName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/edtScanColumn"
            style="@style/edittext_style"
            android:layout_width="0sp"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="100sp"
            android:layout_weight="3"
            android:inputType="text" android:layout_marginRight="10dip"/>

        <Button
            android:id="@+id/btnFindInTemplate"
            android:layout_width="61dp"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="100sp"
            android:layout_weight="0.27"
            android:background="@drawable/login_button"
            android:onClick="clickFindInTemplate"
            android:text="@string/btn_search"
            android:textColor="@color/white"
            android:textSize="@dimen/list_item_content_text" />
    </LinearLayout>

</LinearLayout>